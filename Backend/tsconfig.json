{
  "compilerOptions": {
    "target": "ES2022",             // Updated to ES2022 for better Node.js support
    "module": "NodeNext",           
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "lib": ["ES2022"],              // Match with target
    "strict": true,
    "esModuleInterop": true,         
    "moduleResolution": "NodeNext",  // Changed to match (case sensitivity)
    "skipLibCheck": true,
    "resolveJsonModule": true,      // Useful for importing JSON
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],          // More specific
  "exclude": ["node_modules", "dist"]
}